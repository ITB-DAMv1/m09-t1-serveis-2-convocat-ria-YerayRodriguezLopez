  },
  "components": {
    "schemas": {
      "AuthResponseDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "userId": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "expiration": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "ClientDto": {
        "required": [
          "attendeeCount",
          "ceoFirstName",
          "ceoLastName",
          "companyName",
          "email"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "companyName": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "ceoFirstName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "ceoLastName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "attendeeCount": {
            "maximum": 1000,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "isVip": {
            "type": "boolean"
          },
          "registerDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "UpdateClientDto": {
        "required": [
          "attendeeCount",
          "ceoFirstName",
          "ceoLastName",
          "companyName"
        ],
        "type": "object",
        "properties": {
          "companyName": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "ceoFirstName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "ceoLastName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "attendeeCount": {
            "maximum": 1000,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "isVip": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}